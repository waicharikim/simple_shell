#include "main.h"

/**
 * executor - searches and executes builtin commands
 * @tokens: list of tokens
 *
 * Return: 0 for success -1 for fail.
 */
int executor(char **tokens)
{
	int status;

      /**
       * struct cmd_tab - structure holding command name and respective function
       * @cmd: command name
       * @find_cmd: pointer to a function
       */
	typedef struct cmd_tab {
		char *cmd;
		int (*find_cmd)(char **)
	} cmd;

	cmd builtin[5] = {
		{"cd", &cd},
		{"pwd", &pwd},
		{"ls", &ls},
		{"exit", &exit},
		{"help", &help}};

	for (i = 0; i < 5; i++)/*executes if input matches a builtin*/
	{
		if (builtin[i].cmd == *tokens)
			return(bultin[i].find_cmd(tokens));
	}
		return (process(tokens));
}
